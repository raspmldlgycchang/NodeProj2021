                if(sameClassName==classTotal[i]){
                    $('.showhidden').html(content);
                }
            }
            
        }
        document.querySelector(".text").addEventListener('mouseover', function(){
            setTimeout(()=>{
                $(".showhidden").attr('style', 'display:block');
                $(".showhidden::after").attr('style', 'display:visible');
                setTimeout(()=>{
                    alert('hi');

                },
                0)
            },
            0)
        })
        document.querySelector(".text").addEventListener('mouseout',function(){
            $(".showhidden").attr('style', 'display:none');
            $(".showhidden::after").attr('style', 'display:none');
        })
        
    </script>
</body>
</html>